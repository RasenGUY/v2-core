{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "files": [
    "./hardhat.config.ts",
    "./index.ts",
  ],
  "include": [
    "scripts/**/*.ts",
    "typechain-types",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./types/**/*.ts",
  ]
}
